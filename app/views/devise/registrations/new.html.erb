<% content_for(:menu) do %>
  <div id="menu">
    <%= link_to "トップページへ", root_path %>&nbsp;&nbsp;
  </div>
<% end -%>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <p>アカウント情報の登録を行ってください。全て必須項目になります。 
  　<p><label for="login">ログイン ID</label><br/>
  <%= f.text_field :username %></div>

  　<p><label for="email">Email</label><br/>
  <%= f.email_field :email, :validate => { :uniqueness => false } %></div>

 　<p><label for="password">パスワード</label><br/>
  <%= f.password_field :password %></div>

 　<p><label for="password_confirmation">パスワードの確認</label><br/>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "アカウントの開設", :class => 'regButton' %></div>
<% end %>
